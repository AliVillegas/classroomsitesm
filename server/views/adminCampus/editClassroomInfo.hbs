<main role="main" class="container">
    {{#if classrooms}}
    <h2 class="text-primary" > Classroom {{classrooms.name}}</h2>

    <form class="formDisplayBlock" method="POST" action="/classroomsAdminCampus/{{classrooms.id}}">
        <div class="container" >
            <div class="row" >
                 <div class="form-group col">
                    <label for="classroomName">Name:</label>
                    <input name="classroomName" type="text" class="form-control" id="classroomNameInput" aria-describedby="classroom" value="{{classrooms.name}}">
                </div>
            </div>
            <div class="row" >
                 <div class="form-group col">
                    <label for="classroomCapacity">Capacity:</label>
                    <input name="classroomCapacity" type="text" class="form-control" id="classroomCapInput" aria-describedby="classroom" value="{{classrooms.capacity}}">
                </div>
            </div>
            <div class="row" >
                 <div class="form-group col">
                    <label for="classroomBuilding">Building:</label>
                    <input name="classroomBuilding" type="text" class="form-control" id="classroomBuilding" aria-describedby="classroom" value="{{classrooms.building}}">
                </div>
            </div>
            <div class="row" >
                 <div class="form-group col">
                    <label for="classroomFeatures">Features:</label>
                    <input height="30" name="classroomFeatures" type="text" class="form-control" id="classroomFeatures" aria-describedby="classroom" value="{{classrooms.features}}">
                </div>
            </div>
            <div class="row" >
                <div class="form-group col">
                    <button id= "editClassroomAdmin" type="submit" class="btn btn-sm btn-primary" >Save</button>
                </div>
            </div>
        </div>
    </form> 
      <form class="formDisplayBlock" method="POST" action="/classroomsAdminCampus/del/{{classrooms.id}}">
        <div class="container" >
            <div class="row" >
               
                <div class="form-group col">
                    <button id= "deleteClassroom" type="submit" class="btn btn-sm btn-danger" >Delete Classroom </button>
                </div>
            </div>
        </div>
    </form> 
    {{/if}}

</main>
