<main role="main" class="container">
    <form class="formDisplayBlock" method="POST" action="/classroomsSearch">
        <div class="container" >
            <div class="row" >
                <div class="col" >
                    <input type="text" name="searchQuery" class="form-control" id="searchQueryClassrooms" placeholder="Search Classroom">
                </div>
                <div class="col" >
                    <input class="btn btn-sm btn-primary" type="submit" value="Search">
                </div>

            </div>
        </div>
    </form> 
  <div class="form-group mb-4">
      
            
  </div>
  <div class="container">
      <div class="row">
          <div class="col">
              <h2 class="text-primary" > Classrooms</h2>
        </div>
        <div class="col-md-12 my-1">
              <button id= "createClassroomAdmin" class="btn btn-sm btn-success align-middle" onclick=" window.location = '/classroomsAdminCampus/create' "> New Classroom</button>
        </div>
      </div>
  </div>
{{#if classrooms}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Capacity</th>
      <th scope="col">building</th>
      <th scope="col">features</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each classrooms}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{name}}</td>
      <td>{{capacity}}</td>
      <td>{{building}}</td>
      <td>{{features}}</td>
      <td> <button id= "editClassroomAdmin" class="btn btn-sm btn-primary" onclick=" window.location = '/classroomsAdminCampus/{{this.id}}' ">  edit</button> </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}
